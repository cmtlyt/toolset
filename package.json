{
  "name": "@cmtlyt/toolset",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.14.4",
  "description": "cmtlyt 工具集",
  "author": {
    "name": "cmtlyt",
    "email": "cmtlyt@163.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/cmtlyt/toolset#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cmtlyt/toolset.git"
  },
  "bugs": {
    "url": "https://github.com/cmtlyt/toolset/issues"
  },
  "keywords": [],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint packages --fix",
    "stub": "pnpm -r --filter=\"./packages/*\" --parallel run stub",
    "build": "pnpm -r --filter=\"./packages/*\" run build",
    "test": "vitest",
    "release": "esno ./scripts/release.ts && pnpm -r --filter=\"./packages/*\" publish --no-git-checks",
    "test:ci": "vitest run",
    "gsp": "esno ./scripts/generate-sub-package.ts",
    "dev:doc": "rspress dev",
    "build:doc": "rspress build"
  },
  "dependencies": {
    "@cmtlyt/base": "workspace:^",
    "web-vitals": "^4.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.0",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@rspress/plugin-playground": "^1.38.0",
    "@rspress/plugin-preview": "^1.38.0",
    "@types/node": "^22.10.2",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "2.1.8",
    "bumpp": "^9.9.1",
    "chai": "^5.1.2",
    "chalk": "^5.4.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^0.1.3",
    "esno": "^4.8.0",
    "glob": "^11.0.0",
    "happy-dom": "^15.11.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "prompts": "^2.4.2",
    "rspress": "^1.38.0",
    "rspress-plugin-file-tree": "^0.4.0",
    "rspress-plugin-gh-pages": "^0.3.0",
    "rspress-plugin-reading-time": "^0.3.0",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.1",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --cache --fix"
    ]
  }
}
