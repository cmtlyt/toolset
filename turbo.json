{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "deploy": {
      "dependsOn": ["deploy"],
      "outputs": ["dist/**"]
    },
    "publish": {
      "dependsOn": ["publish"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:doc": {
      "cache": false,
      "persistent": true
    },
    "build:doc": {
      "cache": false,
      "persistent": true
    }
  }
}
